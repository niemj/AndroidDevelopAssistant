<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color" />
        <attr name="laser_color" format="color" />
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text" format="string" />
        <attr name="label_text_size" format="float" />
    </declare-styleable>

    <declare-styleable name="ConvenientBanner">
        <attr name="canLoop" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BadgeView">
        <attr name="badge_padding_top" format="dimension" />
        <attr name="badge_padding_right" format="dimension" />
        <attr name="badge_count" format="integer" />
        <attr name="badge_none_show" format="boolean" />
        <attr name="badge_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_background" format="color|integer" />
        <attr name="ci_selected_background" format="color|integer" />
        <attr name="ci_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
            <enum name="solo" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DIYForCharts">
        <attr name="lineStrokeColor" format="color" />
        <attr name="lineAxisColor" format="color" />
        <attr name="lineStrokeWidth" format="dimension" />
        <attr name="lineStrokeSpacing" format="dimension" />
        <attr name="lineUseDip" format="boolean" />
        <attr name="lineBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="TimerLineView">
        <attr name="timerLineStrokeColor" format="color" />
        <attr name="timerLineStrokeWidth" format="dimension" />
        <attr name="timerLineUseDip" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ScrollPickerView">
        <attr name="spv_min_text_size" format="dimension" />
        <attr name="spv_max_text_size" format="dimension" />
        <attr name="spv_start_color" format="color" />
        <attr name="spv_end_color" format="color" />
        <attr name="spv_center_item_background" format="color" />
        <attr name="spv_visible_item_count" format="integer" />
        <!-- 中间item的位置,默认为 mVisibleItemCount / 2-->
        <attr name="spv_center_item_position" format="integer" />
        <!-- 是否循环滚动，默认为true，开启-->
        <attr name="spv_is_circulation" format="boolean" />
        <!-- 不允许父组件拦截触摸事件，设置为true为不允许拦截，此时该设置才生效 -->
        <attr name="spv_disallow_intercept_touch" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ProcessViewStyle">
        <attr name="process_mode" format="integer" />
        <attr name="process_size" format="integer" />
        <attr name="process_index" format="integer" />
        <attr name="process_name" format="string" />
    </declare-styleable>
    <declare-styleable name="CommonTitleItemView">
        <attr name="descriptions" format="string" />
        <attr name="place_holder" format="string" />
        <attr name="arrow" format="reference" />
        <attr name="icon" format="reference" />
        <attr name="textsize" format="float" />
        <attr name="textcolor" format="color" />
    </declare-styleable>

    <declare-styleable name="CommonEditText">
        <attr name="et_descriptions" format="string" />
        <attr name="et_place_holder" format="string" />
        <attr name="et_single_line" format="boolean" />
        <attr name="et_icon" format="reference" />
        <attr name="et_indicate" format="reference" />
        <attr name="etc_max_length" format="integer" />
    </declare-styleable>


    <declare-styleable name="NewWaveCircle">
        <attr name="waveColorStart" format="color" />
        <attr name="waveColorEnd" format="color" />
        <attr name="waveSpeed" format="float" />
        <attr name="waveStartPeriod" format="float" />
        <attr name="wavePercent" format="float" />
    </declare-styleable>

    <declare-styleable name="MarqueeText">
        <attr name="speed" format="integer" />
        <attr name="type">
            <enum name="left_out" value="1" />
            <enum name="right_out" value="2" />
        </attr>
    </declare-styleable>

</resources>
